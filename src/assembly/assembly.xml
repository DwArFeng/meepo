<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
        xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0
        http://maven.apache.org/xsd/assembly-2.0.0.xsd"
>
    <id>release</id>

    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <fileMode>0755</fileMode>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>src/main/resources/binres</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <filtered>true</filtered>
            <fileMode>755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>src/main/resources/binres</directory>
            <includes>
                <include>*.bat</include>
            </includes>
            <filtered>true</filtered>
            <fileMode>755</fileMode>
            <lineEnding>dos</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/meepo</outputDirectory>
            <directory>src/main/resources/meepo</directory>
            <includes>
                <include>*/*.properties</include>
                <include>*.yaml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/telqos</outputDirectory>
            <directory>src/main/resources/telqos</directory>
            <includes>
                <include>*/*.properties</include>
            </includes>
            <excludes>
                <exclude>banner.txt</exclude>
            </excludes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/logging</outputDirectory>
            <directory>src/main/resources/logging</directory>
            <includes>
                <include>**/README.md</include>
                <include>*/*.xml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>opt</outputDirectory>
            <directory>src/main/resources/opt</directory>
            <includes>
                <include>**/README.md</include>
                <include>*/*.xml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>libcmd</outputDirectory>
            <directory>src/main/resources/libcmd</directory>
            <includes>
                <include>**/README.md</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>libcmd</outputDirectory>
            <directory>src/main/resources/libcmd</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>**/README.md</exclude>
            </excludes>
            <filtered>true</filtered>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>libext</outputDirectory>
            <directory>src/main/resources/libext</directory>
            <includes>
                <include>**/README.md</include>
                <include>*.xml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>optext</outputDirectory>
            <directory>src/main/resources/optext</directory>
            <includes>
                <include>**/README.md</include>
                <include>*.xml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>confext</outputDirectory>
            <directory>src/main/resources/confext</directory>
            <includes>
                <include>**/README.md</include>
                <include>*/*.properties</include>
                <include>*/*.xml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>README.md</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>CHANGELOG.md</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>LICENSE</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>lib</outputDirectory>
            <source>${project.build.directory}/${project.name}-${project.version}.jar</source>
            <fileMode>0755</fileMode>
        </file>
    </files>
</assembly>
